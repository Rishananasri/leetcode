class Solution {
  bool checkPerfectNumber(int num) {
    if (num <= 1) return false;

    int sum = 1; // 1 is always a divisor
    int i = 2;

    while (i * i <= num) {
      if (num % i == 0) {
        sum += i;

        int other = num ~/ i;
        if (other != i) sum += other;
      }
      i++;
    }

    return sum == num;
  }
}
void main() {
  Solution s = Solution();
  print(s.checkPerfectNumber(28)); 
  print(s.checkPerfectNumber(7)); 
}
