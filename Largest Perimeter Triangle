class Solution {
  int largestPerimeter(List<int> nums) {
    nums.sort(); 
    for (int i = nums.length - 1; i >= 2; i--) {
      int a = nums[i];
      int b = nums[i - 1];
      int c = nums[i - 2];

      if (b + c > a) {
        return a + b + c; 
      }
    }
    return 0;
  }
}

void main() {
  Solution sn = Solution();
  print(sn.largestPerimeter([1, 2, 2]));
}
